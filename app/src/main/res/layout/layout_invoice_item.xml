<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:id="@+id/layoutInvoiceItem_apexListHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        android:layoutDirection="rtl">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/layoutInvoiceItem_apexListHeaderNameTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="گروه فاکتور : گروه فاکتور اول"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/layoutInvoiceItem_apexListHeaderDateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="تاریخ راس فاکتور : 23 / 6 / 1401"
                app:layout_constraintStart_toStartOf="@+id/layoutInvoiceItem_apexListHeaderNameTv"
                app:layout_constraintTop_toBottomOf="@+id/layoutInvoiceItem_apexListHeaderNameTv" />

            <TextView
                android:id="@+id/layoutInvoiceItem_apexListHeaderTotalPriceTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="مبلغ کل : 24,000,000 ریال"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/layoutInvoiceItem_apexListHeaderNumberInvoiceTv"
                app:layout_constraintStart_toStartOf="@+id/layoutInvoiceItem_apexListHeaderDateTv"
                app:layout_constraintTop_toBottomOf="@+id/layoutInvoiceItem_apexListHeaderDateTv" />

            <TextView
                android:id="@+id/layoutInvoiceItem_apexListHeaderNumberInvoiceTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="تعداد فاکتور ها : 3 مورد"
                app:layout_constraintBottom_toBottomOf="@+id/layoutInvoiceItem_apexListHeaderTotalPriceTv"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/layoutInvoiceItem_apexListHeaderTotalPriceTv" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</layout>